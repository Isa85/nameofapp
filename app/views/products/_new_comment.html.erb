<% if signed_in? %>
<div class="container-fluid">
  <h4>Add a review:</h4>  
    <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
      <div class="row">
        <div class="col-md-4">
          <%= f.label :body, "Comments" %><br>
          <%= f.text_area :body, class: "form-control", placeholder: "Comments" %>
        </div>        
        <div class="col-md-4">
          <p><div class="rating"></div></p>
        </div>
        <div class="col-md-4">    
          <%= f.submit class: "btn btn-default" %>
        </div>    
      <% end %>
    <% end %>
</div>
