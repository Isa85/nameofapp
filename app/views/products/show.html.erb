<p id="notice"><%= notice %></p>
<div class="container-fluid show_product">
  <div class="row">
  	<h2><%= @product.name %></h2>
  	<div class="col-xs-12 col-md-7 thumbnail">
			<p><%= image_tag(@product.image_url, class: "img-responsive show") %></p>
		</div>
		<div class="col-xs-12 col-md-5 product-specs">
		<p><%= @product.description %></p>
			<p><strong>Price: </strong><%= @product.price %></p>
		</div>
		<p>Average Rating:<div class="rated" data-score="<%= @product.average_rating %>"></div> </p>
		<br>
  	<%= render partial: "new_comment" %>
      
		
		<%= link_to 'Edit', edit_product_path(@product) %> |
		<%= link_to 'Back', products_path %><br>
	</div>
</div>