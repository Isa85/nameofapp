<div class="col-sm-6 col-md-4"> 
	<div class="row">		
   <h1><%= product.name %></h1>
   <p><% if product.image_url.present? %>
  	<%= image_tag(product.image_url, class: "img-responsive carousel-image") %>
		<% end %></p>
   <h3><p><%= product.description %></p></h3>
   <h3><p><strong>EUR <%= product.price %></strong></p></h3> 
   <%= link_to 'Show', product %>
   <%= link_to 'Edit', edit_product_path(product) %>
   <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
	</div>
</div>

 