<div class="col-sm-6 col-md-4"> 
	<div class="row">		
   <h1><%= product.name %></h1>
   <p><% if product.image_url.present? %>
   	<%= image_tag(product.image_url, class: "img-responsive carousel-image") %>
		<% end %></p>
   <h3><p><%= product.description %></p></h3>
   <h3><p><strong>EUR <%= product.price %></strong></p></h3>
   
   
   <%= link_to 'See full description', product, class: "btn btn-primary btn-sm" %>   
   <% if can? :create, :edit, :destroy, @product %> 
   <%= link_to 'New Product', new_product_path, class: "btn btn-primary btn-sm" %>      
    <%= link_to 'Edit', edit_product_path(product), class: "btn btn-primary btn-sm" %>
   <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary btn-sm" %><br>
   <% end %>
	</div>
</div>

 