<div class="container-fluid contact">
	<h1>get in Contact</h1>
	
  <%= flash[:notice] %>

  <div class="row">
    <div class="col-md-4 col-xs-12" id="contact-details">
        <div class="phone">
          <h3><span class="glyphicon glyphicon-glyphicon glyphicon-phone-alt"></span>call us:</h3>
            (0049) 10 20 30 400
        </div><!--end phone-->
        <div class="adress">
          <h3><span class="glyphicon glyphicon-glyphicon glyphicon-pencil"></span>write us:</h3>
          Bike Berlin <br> Main Street 80 <br> 50505 Berlin
        </div><!--end adress-->
        <div class="e-mail">
          <h3><span class="glyphicon glyphicon-glyphicon glyphicon-envelope"></span>mail us:</h3>
          contact@bikeberlin.com
        </div><!--end e-mail-->
    </div>    

    <%= form_tag("/static_pages/thank_you") do %>

    <div class="col-md-4 col-xs-12">
      <div class="form-group">
        <%= label_tag :name %>
        <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name" %>
      </div>      
      <div class="form-group">
        <%= label_tag :email, "Email Address" %>
        <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email" %>
      </div>
      <div class="form-group">
        <%= label_tag :message %>
        <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message" %>
    </div> 
    <%= submit_tag "Send" %>   
    <% end %>
  </div>
</div>


	